<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <form action="/animals/<%= animal._id %>?_method=PUT" method="post">
          <fieldset>
            <legend>Edit a <%= animal.name %></legend>
            <label>
              SPECIES:<input
                type="text"
                name="species"
                value="<%= animal.species %>"
                placeholder="enter animal species"
              />
            </label>
            <label>
              LOCATION:<input
                type="text"
                name="location"
                value="<%= animal.location %>"
                placeholder="enter animal location"
              />
            </label>
            <label>
              EXTINCT:<input type="checkbox" name="extinct" <%=
              animal.extinct ? "checked" : "" %> />
            </label>
            <label>
              LIFEEXPECTANCY:<input
                type="number"
                name="lifeExpectancy"
                value="<%= animal.lifeExpectancy %>"
                placeholder="enter animal lifeExpectancy"
                />
            </label>
          </fieldset>
          <input type="submit" value="Update <%= animal.name %>" />
        </form>
      </div>
    </main>
  </body>
</html>